{
    "name": "@agentic/triage-cli",
    "version": "1.0.0",
    "description": "CLI for agentic triage - sage, assess, mcp-server",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "triage": "./dist/cli.js",
        "agentic-triage": "./dist/cli.js"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "typecheck": "tsc --noEmit"
    },
    "keywords": ["cli", "triage", "sage", "mcp"],
    "author": "Jon Bogaty <jon@jonbogaty.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/agentic-dev-library/triage.git",
        "directory": "packages/cli"
    },
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@agentic/triage-core": "workspace:*",
        "@agentic/triage-ai": "workspace:*",
        "@agentic/triage-bots": "workspace:*",
        "@modelcontextprotocol/sdk": "^1.25.1",
        "commander": "^14.0.2",
        "picocolors": "^1.1.1"
    },
    "devDependencies": {
        "tsup": "^8.5.0",
        "typescript": "^5.9.3"
    }
}
