{
    "name": "agentic-triage",
    "version": "2.0.0",
    "private": true,
    "description": "AI-powered GitHub bots - monorepo",
    "type": "module",
    "scripts": {
        "build": "pnpm -r build",
        "dev": "pnpm -r --parallel dev",
        "typecheck": "pnpm -r typecheck",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "test:unit": "vitest run --project core --project ai --project bots --project trackers --project cli",
        "test:integration": "vitest run --project integration",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:all": "pnpm test:unit && pnpm test:integration && pnpm test:e2e",
        "lint": "biome lint .",
        "lint:fix": "biome lint --write .",
        "format": "biome format --write .",
        "check": "biome check .",
        "clean": "pnpm -r exec rm -rf dist && rm -rf coverage test-results",
        "prepare": "husky"
    },
    "keywords": [
        "triage",
        "ai",
        "bot",
        "github-bot",
        "github-action",
        "sage",
        "curator",
        "fixer",
        "harvester",
        "guardian"
    ],
    "author": "Jon Bogaty <jon@jonbogaty.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/agentic-dev-library/triage.git"
    },
    "homepage": "https://github.com/agentic-dev-library/triage#readme",
    "bugs": {
        "url": "https://github.com/agentic-dev-library/triage/issues"
    },
    "engines": {
        "node": ">=20"
    },
    "packageManager": "pnpm@9.15.0",
    "devDependencies": {
        "@biomejs/biome": "^2.3.10",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/commit-analyzer": "^13.0.1",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^12.0.2",
        "@semantic-release/npm": "^13.1.3",
        "@semantic-release/release-notes-generator": "^14.1.0",
        "@vitest/coverage-v8": "^3.2.4",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "semantic-release": "^25.0.2",
        "tsup": "^8.5.0",
        "typescript": "^5.9.3",
        "vitest": "^3.2.4"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx,json}": [
            "biome check --write --no-errors-on-unmatched"
        ]
    }
}
